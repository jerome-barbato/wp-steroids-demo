{% if term %}
	{% set seo = term.meta('seo') %}
	{% set content = term %}
{% elseif post %}
	{% set seo = post.meta('seo') %}
	{% set content = post %}
{% elseif archive %}
	{% set seo = archive.seo %}
	{% set content = archive %}
{% endif %}
<title>{{ seo.title|default(wp_title) }}</title>
<meta property="og:locale" content="{{ blog.language }}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ seo.title|default(content.title) }}" />
{% if seo.description|default(content.excerpt) %}
	<meta name="description" content="{{ seo.description|default(content.excerpt)|escape }}">
	<meta property="og:description" content="{{ seo.description|default(content.excerpt)|escape }}" />
{% endif %}
<meta property="og:url" content="{{ content.link }}" />
<meta property="og:site_name" content="{{ site.name|escape }}" />
{% if options.facebook_username %}
	<meta property="article:publisher" content="https://www.facebook.com/{{ options.facebook_username|escape }}" />
{% endif %}
{% if seo.image|default(content.thumbnail) %}
	<meta property="og:image" content="{{ seo.image|default(content.thumbnail)|crop(1024,554) }}" />
	<meta property="og:image:width" content="1024" />
	<meta property="og:image:height" content="554" />
	<meta name="twitter:card" content="summary_large_image" />
{% endif %}
{% if post %}
	<meta property="article:modified_time" content="{{ post.modified_date('c') }}" />
{% endif %}
{% if options.twitter_username %}
	<meta name="twitter:site" content="@{{ options.twitter_username|replace({'@':''})|escape }}" />
{% endif %}
