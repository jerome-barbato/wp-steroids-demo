{% if props and (props.title or props.anchor) and props.url %}
    <a {% if props.icon|default %}data-icon_after="{{ props.icon }}"{% endif %} class="p-cta {{ props.class|default }}" href="{{ props.url }}" target="{{ props.target|default('_self') }}" rel="{% if props.target|default == '_blank' %}noreferrer noopener{% endif %}">{{ props.title|default(props.anchor) }}</a>
{% endif %}